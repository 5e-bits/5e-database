{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es5",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"],  // "typeRoots": [] -> won't work
    "types": ["node"]                      // "types": [] -> won't work
  },
  "include": ["./**/*"]
}
